{
    "name": "hmones/laravel-cacheable",
    "description": "A simple package to automatically cache the returns of certain methods in a given class and forgets them as well on request.\nThe package is highly configurable and let you manage naming of the cache keys with ease.",
    "license": "MIT",
    "authors": [
        {
            "name": "Haytham Mones",
            "email": "haytham.mones@gmail.com",
            "homepage": "https://haythammones.com"
        }
    ],
    "homepage": "https://github.com/hmones/laravel-cacheable",
    "keywords": ["Laravel", "LaravelCacheable"],
    "require": {
        "php": "^7.4|^8.0",
        "ext-json": "*",
        "illuminate/support": "~7|~8|~9"
    },
    "require-dev": {
        "phpunit/phpunit": "~9.0",
        "orchestra/testbench": "~5|~6|~7"
    },
    "autoload": {
        "psr-4": {
            "Hmones\\LaravelCacheable\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hmones\\LaravelCacheable\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "CacheableServiceProvider"
            ]
        }
    }
}
